{
	"name": "wikimedia/popularpages",
	"description": "A tool for generating popular pages reports for WikiProjects.",
	"license": "MIT",
	"homepage": "https://wikitech.wikimedia.org/wiki/Tool:Popular_Pages",
	"require": {
		"mediawiki/oauthclient": "^0.1",
		"wikimedia/simplei18n": "^1.0",
		"silex/silex": "^2.0",
		"twig/twig": "^1.24",
		"symfony/twig-bridge": "^3.1",
		"addwiki/mediawiki-api-base": "^2.2"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "^0.7",
		"jakub-onderka/php-parallel-lint": "^0.9",
		"phpunit/phpunit": "^4.8"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\PopularPages\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\PopularPages\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"createconfig": [
			"php -r \"file_exists('config.inc.php') || copy('config.example.inc.php', 'config.inc.php');\""
		],
		"post-install-cmd": [
			"composer createconfig"
		],
		"post-update-cmd": [
			"composer createconfig"
		]
	}
}
